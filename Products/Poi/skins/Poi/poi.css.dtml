/* <dtml-with base_properties> */

/* Tracker front page */

.issue-quick-search-box {
    width: 30%; 
    float: left; 
    padding: 0 1em 1em 0;
}

#issue-search-link {
    display: block;
    float: right;
    background: &dtml-backgroundColor; url(&dtml-portal_url;/search_icon.gif) 2px 1px no-repeat;
    padding: 1px 1px 1px 18px;
}

/* Search table */

.issue-search-results {
    
}

.issue-search-rss {
    text-align: right;
}

/* Issue display */

.issue-description {
    font-size: 105%;
    margin-bottom: 1em;
}

.modification-info {
    margin: 0 0 0.5em 0;
    color: &dtml-discreetColor;;
    font-size: &dtml-fontSmallSize;;

}

.issue-info-box {
    float: right;
}
.issue-info-box th {
    text-align: right;
}
.issue-info-box td {
    text-align: left;
}
.unassigned-field {
    text-align: left;
}

.steps-to-reproduce span {
    font-style: italic;
}

.steps-to-reproduce ol {
    margin: 0.5em 0 1em 3em;
    line-height: 1em;
}

.steps-to-reproduce li {
    margin: 0;
    line-height: 1em;
}


.issue-attachment-label {
    margin-bottom: 0.5em;
}

.issue-tags {
    margin: 0 0 0.5em 0;
}

.issue-tags-label {
    font-weight: bold;
}

ul.issue-tags-tags {
    display: inline;
    margin-left: 0;
}

ul.issue-tags-tags li {
    display: inline;
}

ul.issue-tags-tags a {

}


/* Different response types */

.response-clarification {
    margin: 1em 0;
    padding: 0.5em;
    border: &dtml-borderWidth; &dtml-borderStyleAnnotations; &dtml-globalBorderColor;;
    clear: both;
}

.response-reply {
    margin: 1em 0;
    padding: 0.5em;
    border: &dtml-borderWidth; &dtml-borderStyleAnnotations; &dtml-notifyBorderColor;;
    clear: both;
}

.response-additional {
    margin: 1em 0;
    padding: 0.5em;
    border: &dtml-borderWidth; &dtml-borderStyleAnnotations; &dtml-contentViewBorderColor;;
    clear: both;    
}

/* Response details */

.response-info {
    color: &dtml-discreetColor;;
    font-size: &dtml-fontSmallSize;;
    font-weight: normal;
    margin-bottom: 0.5em;
}

.issueChange {
    text-transform: lowercase;
}

/* Response actions box */
.response-actions {
  float: right;
  clear: right;
}

.response-actions form {
    display: inline;
}

/* Issue states */

.issue-unconfirmed {
    color: purple;
}

.issue-open {
    color: red;
}

.issue-in-progress {
    color: &dtml-notifyBorderColor;;
}

.issue-postponed .issue-rejected {
    color: &dtml-discreetColor;;
}

.issue-resolved {
    color: black;
}

.issue-closed {
    color: &dtml-linkColor;;
}

/* </dtml-with> */